extends layout

block content
  .container
    .jumbotron
      h1.display-2= title
      p.lead Welcome to #{title}

    .blockquote
      h3 User Stories:
      ul 
          li I can pass a URL as a parameter and I will receive a shortened URL in the JSON response.
          li When I visit that shortened URL, it will redirect me to my original link.
    h3 Example creation usage:
      p.text-danger https://url-shortener-true.herokuapp.com/new/www.google.com
      p.text-danger https://url-shortener-true.herokuapp.comryKoFuwZW
    h3 Example creation output:
      p.text-danger { original_url: "http://www.google.com", short_url: "url-shortener-true.herokuapp.comryKoFuwZW" }
    h3 Usage:
      p.text-danger https://url-shortener-true.herokuapp.comryKoFuwZW
    h3 Will redirect to:
      p.text-danger https://www.google.com/